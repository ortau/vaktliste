<%= form_tag user_sessions_path, :method => :post, html: {class: "form-horizontal", role: "form"} do %>
    <fieldset>
      <legend>Innlogging</legend>
      <br/>

      <div class="form-group">
        <%= label_tag :username, "Brukernavn:", {class: "col-lg-2 control-label"} %>
        <div class="col-lg-10 controls">
          <%= text_field_tag :username %>
        </div>
      </div>
      <div class="form-group">
        <%= label_tag :password, "Passord: ", {class: "col-lg-2 control-label"} %>
        <div class="col-lg-10 controls">
          <%= password_field_tag :password %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10 controls">
          <%= submit_tag(value="Logg inn", {class: "btn btn-default"}) %>
        </div>
      </div>
    </fieldset>
<% end %>